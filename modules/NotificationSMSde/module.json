{
    "dependencies": [],
    "singleton": false,
    "category": "notifications",
    "author": "Z-Wave.Me",
    "homepage": "http://razberry.z-wave.me",
    "icon": "",
    "version": "1.0.0",
    "maturity": "stable",
    "repository": {
            "type": "git",
            "source": "https://github.com/Z-Wave-Me/home-automation"
    },
    "defaults": {
        "title": "Notification SMS Service, International",
        "description": "This service allows you to send notification sms via TextBelt.",
        "phone": "",
	    "prefix": "Z-Way notification:",
        "intl": ""
    },
    "schema": {
        "description": "Make a call via german NotificationSMSde.",
        "type": "object",
        "properties": {
            "phone": {
                "required": true,
                "pattern": "[1-9][0-9]*"
            },
            "prefix": {
                "required": false
            },
            "intl": {
                "field": "enum",
                "enum":["text","canada","intl"],
                "required": true
            }
        },
        "required": false
    },
    "options": {
        "fields": {
            "phone": {
                "label": "Phone number with country code to send SMS. In form of +79261234567"
            },
            "prefix": {
                "label": "Prefix for all messages"
            },
            "intl": {
                "type": "select",
                "field": "optionLabels",
                "optionLabels": ["U.S.A.","Canada","International"],
                "label": "Please choose the country your phone number belongs to."
            }      
        }
    }
}